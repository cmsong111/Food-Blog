name: Deploy to cloudtype
on:
  push:
    branches:
      - main
jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3
      - name: Connect deploy key
        uses: cloudtype-github-actions/connect@v1
        with:
          token: ${{ secrets.CLOUDTYPE_TOKEN }}
          ghtoken: ${{ secrets.GHP_TOKEN }}
      - name: Deploy
        uses: cloudtype-github-actions/deploy@v1
        with:
          token: ${{ secrets.CLOUDTYPE_TOKEN }}
          project: cmsong111/instagram
          stage: main
          yaml: |
            name: instagram
            app: java@17
            options:
              ports: 8080
              start: java -jar .\build\libs\demo-0.0.1-SNAPSHOT.war
              jarfile: ""
              build: ./gradlew clean build
              strategy: rolling
              env:
                - name: DB_HOST
                  value: mariadb
                - name: DB_PORT
                  value: "3306"
                - name: DB_NAME
                  value: instagram
                - name: DB_USER
                  value: root
                - name: DB_PASSWORD
                  secret: mariadb-root-password
                - name: DDL_MODE
                  value: create
            context:
              git:
                url: git@github.com:${{ github.repository }}.git
                ref: ${{ github.ref }}
              preset: java-springboot
